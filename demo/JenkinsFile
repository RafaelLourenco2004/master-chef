pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir ('demo'){
                    sh './mvnw clean package -DskipTests=false'
                }
            }
        }

        stage('Test') {
            steps {
                dir ('demo'){
                    sh './mvnw test'
                }
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
        }
    }
}
